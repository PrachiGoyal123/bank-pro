<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />

    <link rel="stylesheet" href="/stylesheet/global.css" />

    <!-- external css start-->
    <link rel="stylesheet" href="/stylesheet/Dashboard.css" />
    <!-- external css end-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <title>Dashboard</title>
    <style>
        .menu-container {
          display: flex;
          align-items: center;
          flex-direction: column;
          margin-top: 2rem;
        }
    
        .search-input {
          margin-right: 10px;
          padding: 5px;
          border: 1px solid #ccc;
          border-radius: 4px;
        }
    
        .menu-list {
          list-style-type: none;
          padding: 0;
          margin: 0;
          background-color: rgb(0, 0, 0);
          width: 100%;
          max-width: 240px;
          height: auto;
          max-height: 100px;
          overflow-y: scroll;
        }
    
        .menu-list li {
          display: none;
          padding: 5px;
          cursor: pointer;
          color: white;
        }
    
        .menu-list li.visible {
          display: block;
        }
        .signup-box{
          display: flex;
          align-items: center;
          justify-content: center;
         margin-top: 2rem;
         flex-wrap: wrap;
         gap: 10px;
        }
      </style>
      <script>
        function filterMenu() {
          var input, filter, ul, li, i;
          input = document.getElementById("searchInput");
          filter = input.value.toUpperCase();
          ul = document.getElementById("menuList");
          li = ul.getElementsByTagName("li");
          for (i = 0; i < li.length; i++) {
            if (li[i].innerHTML.toUpperCase().indexOf(filter) > -1) {
              li[i].classList.add("visible");
            } else {
              li[i].classList.remove("visible");
            }
            if(filter === "") li[i].classList.remove("visible");
          }
        }
      </script>
  </head>

  <body>
    
    <nav class="navbar bg-body-tertiary">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">
          <div><img id="logo" src="/images/bank.jpg" alt="" height="50" /></div>
          <a href="/dashboard/profile">
            <img
              id="user-icon"
              src="photos/profile.png"
              alt="User Icon"
              class="user-icon"
          /></a>
        </span>
      </div>
    </nav>
    <div>
        <div class="menu-container">
            <input id="searchInput" class="search-input" type="search" placeholder="Enter UPI Id..." onkeyup="filterMenu()">
            <ul id="menuList" class="menu-list">
              <li>xyz@gmail.com</li>
            </ul>
          </div>
          <div class="signup-box">
            <input type="text" 
                  
                   placeholder="Enter your name">
            <input type="id" 
                  
                   placeholder="pay with upi">
            <input type="number" 
                   
                   placeholder="pay with number">
            
            <button class="clkbtn">confirm</button>
        </div>
      </div>
    </div>
  </body>
</html>
